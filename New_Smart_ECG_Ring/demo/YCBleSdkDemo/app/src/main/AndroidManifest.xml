<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    package="com.smartringpro.mannaheal">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"

        android:allowNativeHeapPointerTagging="false"
        android:largeHeap="true"
        android:maxAspectRatio="2.4"
        android:persistent="true"
        android:preserveLegacyExternalStorage="true"
        android:resizeableActivity="true"
        tool:ignore="LockedOrientationActivity">
        <activity
            android:name=".WelComActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity" />

        <activity android:name=".TimeSetActivity" />
        <activity android:name=".ChoseActivity" />
        <activity android:name=".OldActivity" />
        <activity android:name=".NewActivity" />
        <activity android:name=".RCActivity" />
        <activity android:name=".OtherActivity" />
        <activity android:name=".TestBoolActivity" />
        <activity android:name=".ecg.EcgActicvity" />
        <activity android:name=".ecg.EcgMeasureActivity" />
        <activity android:name=".ecg.EcgMsgActivity" />
        <activity android:name=".contacts.DeviceContactsActivity" />

        <activity android:name=".upgrade.GetUrlActivity" />
        <activity android:name=".upgrade.UiUpgradeActivity" />
        <activity android:name=".upgrade.FirmwareUpgradeActivity" />
        <activity android:name=".upgrade.FirmwareRecoveryActivity" />
        <activity android:name=".upgrade.auto.AutoUiUpgradeActivity" />
        <activity android:name=".upgrade.auto.AutoFirmwareUpgradeActivity" />
        <activity android:name=".upgrade.auto.AutoFactoryActivity" />

        <activity android:name=".ui.activities.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".BleHelperActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.activities.OtpActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.activities.DeviceActivity"
            android:screenOrientation="portrait"/>

        <receiver
            android:name=".phone.PhoneReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="800">
                <action android:name="android.intent.action.PHONE_STATE" />
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
            </intent-filter>
        </receiver>

        <service
            android:name=".MyBleService"
            android:enabled="true"
            android:exported="true" />


        <service android:name=".service.BackService" />

        <service
            android:name="com.realsil.sdk.dfu.DfuService"
            android:exported="false" />
    </application>

    <!-- Required  一些系统要求的权限，如访问网络等-->
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <uses-permission android:name="com.zqh.permission.JPUSH_MESSAGE" />
    <!-- SDK2.1新增获取用户位置信息 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_USER_PRESENT" />

    <!-- 添加短信权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <!-- 电话权限 -->
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 读取电话号码权限 -->
    <uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- sharesdk -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"></uses-permission>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <!-- 蓝牙分享所需的权限 -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <!--极光权限-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- Optional for location -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!--权限问题,移植的时候，需要权限-->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />

    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

</manifest>